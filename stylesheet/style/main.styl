//---------State Rules---------//
@keyframes mymove {
  60% {
    opacity(0.6)
  }
  100% {
    opacity(1)
  }
}

@keyframes leftFall {
	10% {
	  opacity(1)
    transform rotate(10deg)
    margin-top 10%
    margin-right 1%
  }
  100% {
  	opacity(0)
    transform rotate(28deg)
    margin-top 110%
    margin-right 5%
  }
}
@keyframes rightFall {
	10% {
    opacity(1)
    transform rotate(-10deg)
    margin-top 10%
  }
  100% {
  	opacity(0)
    transform rotate(-28deg)
    margin-top 110%
  }
}
